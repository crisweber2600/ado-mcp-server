{
  "servers": {
    "AdoMcp": {
      "type": "stdio",
      "command": "dotnet",
      "args": ["run", "--project", "src/Ado.Mcp"],
      "env": {
        "ADO_ORG": "myorg",
        "ADO_PROJECT": "MyProject",
        "ADO_PAT": "${input:ado_pat}"
      }
    }
  },
  "inputs": [
    { "id": "ado_pat", "type": "promptString", "description": "Azure DevOps PAT", "password": true }
  ]
}